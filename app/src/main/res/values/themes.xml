<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MoviiCat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="statusBarBackground">@color/primary_light</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/primary</item>
    </style>
    <style name="SplashStyle">
        <item name="android:background">@color/primary_light</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
        <item name="android:background">@color/primary_light</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="RVItemPoster">
        <item name="android:layout_height">@dimen/item_poster_height</item>
        <item name="android:layout_width">@dimen/item_poster_width</item>
    </style>
    <style name="RVItemPoster.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="RVItemTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVItemTitle.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="RVItemScore">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVItemScore.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="RVItemIvScore">
        <item name="android:layout_width">@dimen/item_progress_size</item>
        <item name="android:layout_height">@dimen/item_progress_size</item>
    </style>
    <style name="RVItemIvScore.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="RVItemField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
    </style>
    <style name="RVItemField.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="layout_collapseMode">none</item>
    </style>
    <style name="DetailPoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/detail_poster_min_height</item>
    </style>
    <style name="DetailPoster.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="DetailOverviewField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DetailOverviewField.Shimmer">
        <item name="android:layout_height">@dimen/shimmer_detail_field_height</item>
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="DetailOverviewValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
    </style>
    <style name="DetailOverviewValue.Shimmer">
        <item name="android:background">@color/secondary_light</item>
        <item name="android:layout_height">@dimen/shimmer_detail_field_height</item>
    </style>
    <style name="DetailTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_normal</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_detail_title</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DetailTitle.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="DetailField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
    </style>
    <style name="DetailRootContainerChips">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="DetailRootContainerChips.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="DetailField.Shimmer">
        <item name="android:layout_width">@dimen/shimmer_detail_field_width</item>
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="DetailChipGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="singleLine">true</item>
    </style>
    <style name="DetailSeparator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_detail_field</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="DetailSeparator.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
    <style name="GenreChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space_small</item>
    </style>
    <style name="GenreChip.Shimmer">
        <item name="android:background">@color/secondary_light</item>
    </style>
</resources>