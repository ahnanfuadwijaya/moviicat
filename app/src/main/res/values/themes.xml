<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MoviiCat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/primary</item>
    </style>
    <style name="IndeterminateHProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/progress_indeterminate_horizontal_height</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/black</item>
    </style>
    <style name="SingleMessage" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_big</item>
        <item name="android:background">@color/primary_light</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>
    <style name="RVItemPoster">
        <item name="android:layout_height">@dimen/item_poster_height</item>
        <item name="android:layout_width">@dimen/item_poster_width</item>
    </style>
    <style name="RVItemTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVItemScore">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RVItemIvScore">
        <item name="android:layout_width">@dimen/item_progress_size</item>
        <item name="android:layout_height">@dimen/item_progress_size</item>
    </style>
    <style name="RVItemField">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_item_field</item>
    </style>
    <style name="RVItemIcon">
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
    </style>
</resources>